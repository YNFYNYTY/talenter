<div class='container_for_registration'>
		<%= form_for @project do |f| %>
			<div class='new_proyect_name'>
			<%= f.label :name %>
			<%= f.text_field :name %><br/>
		  </div>
		  <div class = 'new_proyect_description'>
		  <%= f.label :description %>
		  <%= f.text_area :description %>
			</div>
			<div class= 'new_proyect_long_description'>
		  <%= f.label :long_description %> <%= f.text_area :long_description %></div>
		  </div>
    		<% Skill.all.each do |skill| %>
		      <li>
		        <%= check_box_tag 'skill_ids[]', skill.id %>
		        <%= label_tag skill.name %>
		        <div class = 'avatar_skill'>
		        	<%= image_tag("/assets/#{skill.name}.png") %>
		        </div>
		      </li>
    		<% end %>
  			</ul>
  			<ul id='steps'>
  				<li>
  					<label>Name</label>
  					<input name='steps[][name]'/>>
  					<label>Description</label>
  					<textarea name='steps[][description]'></textarea>
  				</li>
  			</ul>
				<button id = 'add_step'>Add new step</button>
				<button id = 'remove_step'>Remove new step</button>


		  <div class= 'col-md-4'></div><div class= 'col-md-3'>
		  <%= f.submit "Create" %></div></div>
		<% end %>

		<div class= 'col-md-4'></div><div class= 'col-md-3'>
			<%= link_to "Back", projects_path  %></div></div>
	</div>
</table>


<script type ='text/javascript'>
	$(function(){
		$('#add_step').click( function(){
			var $button = $(this),
			    $ul = $('#steps'),
			    $li = $ul.find('li').eq(0);
			$li.clone().appendTo($ul);
			return false;
		});
	});
</script>

<script type ='text/javascript'>
	$(function(){
		$('#remove_step').click( function(){
			var $button = $(this),
			    $ul = $('#steps'),
			    $li = $ul.find('li').eq(1);
			$li.remove();
			return false;
		});
	});
</script>