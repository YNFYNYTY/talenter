
<h1>Share your skills motherfucker</h1>
	<div class="table-responsive">
		<table class='table table-hover'>
			<div class='row'>
				<div class= 'col-md-1'></div>
				<div class='col-md-3'>NAME</div>
				<div class='col-md-3'>DESCRIPTION</div>
			</div>
		<% @projects.each do |project| %>
			<div class='row'>
      	<div class= 'col-md-3 col-md-offset-1'><%= project.name %></div>
      	<div class='col-lg-3'><%= project.description %></div>
      	<div class='col-md-1'><%= link_to 'Edit', edit_project_path(project) %></div>
      	<div class='col-md-1'><%= link_to 'See', project_path(project) %></div>
      	<div class='col-md-1'><%= link_to 'Delete', project_path(project), method: :delete, data: { confirm: 'Are you sure?'} %></div>
      </div>
		<% end %>
		<div class='row'>
			<div class='col-md-3'></div>
			<div class='col-md-3'>
				<button id="new-project">
					<%= link_to "Create a new project", new_project_path, :method=> :get %>
				</button>
			</div>
		</div>
		</table>
	</div>
