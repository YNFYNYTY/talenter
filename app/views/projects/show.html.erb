
<div class="table-responsive">
	<table class='table table-hover'>
		<div class='row'>
			<div class= 'col-md-3 col-md-offset-1'><h1><%= @project.name %></h1></div></div>
		<div class= 'row'>
			<div class= 'col-md-3 col-md-offset-1'><h3><%= @project.description %></h3></div></div>
		<div class= 'row'>
			<div class= 'col-md-3 col-md-offset-1'><h3><%= @project.long_description%></h3></div></div>
		<div class= 'col-md-3 col-md-offset-1'>
				<ul>
					<% @project.skills.each do |project_skill| %>
						<li><%= project_skill.name %></li>
					<% end %>
				</ul>
			</div>
			<div class= 'col-md-3 col-md-offset-1'>
				<ul>
					<% @project.steps.each do |project_step| %>
						<li><%= project_step.name %>
							<%= project_step.description %>
						</li>
					<% end %>
				</ul>
			</div>
		<div class= 'col-md-3 col-md-offset-1'>
			<%= link_to "Back", projects_path  %></div></div>
		</div>

	</table>
</div>



<div class= 'container_for_show'>
	<img src="/assets/example1.jpg" />
	<div class = 'show_project_name'>
	<%= @project.name %>
	</div>
	<div class = 'show_project_description'>
	<%= @project.description %>
	</div>
	<div class = 'show_project_long_description'>
	<%= @project.long_description %>
	</div>
</div>